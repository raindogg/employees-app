<h1>Sign up to start saving contacts</h1>

<%= form_tag '/users', method: :post do %>
  <div>
  <%= label_tag :name %>
  <%= text_field_tag :name %>
  </div>
  <div>
    <%= label_tag :email %>
    <%= text_field_tag :email %>
  </div>
  <div>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <div>
    <%= label_tag :password_confirrmation %>
    <%= password_field_tag :password_confirrmation %>
  </div>
  <div>
    <%= submit_tag 'Sign up' %>
  </div>


<% end %>