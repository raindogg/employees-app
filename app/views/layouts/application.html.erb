<!DOCTYPE html>
<html>
  <head>
    <title>EmployeesApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <nav class="navbar navbar-dark bg-primary">
    <ul class="nav navbar-nav">
      <li class="nav-item active">
        <a class="nav-link" href="/contacts">Home<span class="sr-only">(current)</span></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/contacts/new">Add a contact</a>
      </li>
      <% if current_user %>
        <li class="nav-item">
          <%= link_to 'Log out', '/logout', method: :delete, class: "nav-item" %>
        </li>
        <li><a class="nav-item">Hello <%= current_user.name %></a></li>
      <% else %>
      <li class="nav-item">
        <a class="nav-link" href="/login">Login</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/signup">Sign up</a>
      </li>
      <% end %>
      </ul>
      <%= form_tag '/contacts/search/display', method: :post, class: 'navbar-form navbar-right' do %>
        <div class="form-group">
          <%= text_field_tag :search_term, nil, placeholder: 'Search', class: "form_control" %>
        </div>
        <%= submit_tag 'Submit', class: "btn btn-default" %>
      <% end %>
  </nav>
    <% flash.each do |name, message| %>
<div class="alert alert-<%= name %> alert-dismissible fade in" role="alert">
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
<%= message %>
</div>
  </div>
  <% end %>
</div>
    <%= yield %>
  </body>
</html>
